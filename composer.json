{
    "name": "friendsofhyperf/mcp-server",
    "description": "MCP Server - A Model Context Protocol server implementation for Hyperf framework with Redis session management and annotation-based configuration",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "hyperf",
        "mcp",
        "model-context-protocol",
        "server",
        "redis",
        "session",
        "tools",
        "prompts",
        "resources",
        "annotations",
        "php-8.1",
        "php-8.2",
        "php-8.3",
        "php-8.4",
        "ai",
        "claude",
        "assistant"
    ],
    "authors": [
        {
            "name": "Deeka Wong",
            "email": "huangdijia@gmail.com"
        }
    ],
    "homepage": "https://github.com/friendsofhyperf/mcp-server",
    "support": {
        "issues": "https://github.com/friendsofhyperf/mcp-server/issues",
        "source": "https://github.com/friendsofhyperf/mcp-server"
    },
    "require": {
        "php": "^8.1",
        "ext-redis": "*",
        "hyperf/command": "~3.1.0",
        "hyperf/context": "~3.1.0",
        "hyperf/di": "~3.1.0",
        "hyperf/framework": "~3.1.0",
        "hyperf/http-server": "~3.1.0",
        "hyperf/redis": "~3.1.0",
        "mcp/sdk": "^0.1.0"
    },
    "require-dev": {
        "huangdijia/php-coding-standard": "^2.0",
        "hyperf/testing": "~3.1.0",
        "phpunit/phpunit": "^10.0 || ^11.0 || ^12.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "FriendsOfHyperf\\McpServer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FriendsOfHyperf\\Tests\\McpServer\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "php-http/discovery": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "hyperf": {
            "config": "FriendsOfHyperf\\McpServer\\ConfigProvider"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse",
        "cs-fix": "php-cs-fixer fix $1",
        "test": "phpunit"
    }
}
